---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.vue';
import About from '../components/About.vue';
import Skills from '../components/Skills.vue';
import Projects from '../components/Projects.vue';
import Contact from '../components/Contact.vue';
import Footer from '../components/Footer.vue';
---

<Layout 
	title="Quentin Delizee - Développeur Full Stack"
	description="Portfolio de Quentin Delizee, développeur full stack passionné par les technologies web modernes comme React, Node.js, Express, MongoDB et les outils IA."
>
	<!-- Skip to main content link for keyboard navigation -->
	<a href="#main-content" class="skip-to-content">Aller au contenu principal</a>
	
	<main id="main-content">
		<section id="hero" aria-label="Section d'accueil">
			<Hero client:load />
		</section>
		<section id="about" aria-labelledby="about-title">
			<About client:visible />
		</section>
		<section id="skills" aria-labelledby="skills-title">
			<Skills client:visible />
		</section>
		<section id="projects" aria-labelledby="projects-title">
			<Projects client:visible />
		</section>
		<section id="contact" aria-labelledby="contact-title">
			<Contact client:visible />
		</section>
	</main>
	<Footer />
</Layout>

<style>
	/* Skip to content link for keyboard navigation */
	.skip-to-content {
		position: absolute;
		top: -100px;
		left: 0;
		background: var(--color-primary);
		color: white;
		padding: 0.75rem 1.5rem;
		text-decoration: none;
		font-weight: 600;
		z-index: 100;
		border-radius: 0 0 0.5rem 0;
		transition: top 0.3s ease;
	}
	
	.skip-to-content:focus {
		top: 0;
		outline: 2px solid var(--color-primary-light);
		outline-offset: 2px;
	}
</style>
